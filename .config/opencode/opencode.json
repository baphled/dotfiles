{
  "$schema": "https://opencode.ai/config.json",
  "mcp": {
    "memory": {
      "command": [
        "npx",
        "-y",
        "@modelcontextprotocol/server-memory"
      ],
      "type": "local"
    },
    "vault-rag": {
      "command": [
        "/home/baphled/.local/bin/mcp-vault-server"
      ],
      "type": "local"
    }
  },
  "plugin": [
    "opencode-anthropic-auth@0.0.13"
  ],
  "provider": {
    "ollama": {
      "models": {
        "glm-4.7-flash": {
          "_launch": true,
          "name": "glm-4.7-flash"
        },
        "glm-4.7:cloud": {
          "_launch": true,
          "name": "glm-4.7:cloud"
        },
        "granite4:1b": {
          "_launch": true,
          "name": "granite4:1b"
        }
      },
      "name": "Ollama (local)",
      "npm": "@ai-sdk/openai-compatible",
      "options": {
        "baseURL": "http://localhost:11434/v1"
      }
    }
  }
}
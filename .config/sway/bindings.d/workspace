#
# Workspaces:
#
# Switch to workspace
bindsym $mod+1 workspace $workspace_terminals
bindsym $mod+2 workspace $workspace_notes
bindsym $mod+3 workspace $workspace_browser
bindsym $mod+4 workspace $workspace_communications
bindsym $mod+5 workspace $workspace_learning
bindsym $mod+6 workspace $workspace_email
bindsym $mod+7 workspace $workspace_reading
bindsym $mod+8 workspace $workspace_file_browser
bindsym $mod+9 workspace $workspace_remote
bindsym $mod+0 workspace $workspace_top

# Move focused container to workspace
bindsym $mod+Shift+1 move container to workspace $workspace_terminals
bindsym $mod+Shift+2 move container to workspace $workspace_notes
bindsym $mod+Shift+3 move container to workspace $workspace_browser
bindsym $mod+Shift+4 move container to workspace $workspace_communications
bindsym $mod+Shift+5 move container to workspace $workspace_learning
bindsym $mod+Shift+6 move container to workspace $workspace_email
bindsym $mod+Shift+7 move container to workspace $workspace_reading
bindsym $mod+Shift+8 move container to workspace $workspace_file_browser
bindsym $mod+Shift+9 move container to workspace $workspace_remote
bindsym $mod+Shift+0 move container to workspace $workspace_top

# vim: set filetype=swayconfig:
